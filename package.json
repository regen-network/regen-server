{
  "name": "root",
  "private": true,
  "workspaces": [
    "server",
    "iri-gen",
    "common"
  ],
  "dependencies": {
    "@lerna/project": "^3.21.0",
    "dotenv": "^16.0.0",
    "lerna": "^4.0.0",
    "minimist": "^1.2.5",
    "node-flywaydb": "^3.0.0",
    "pg": "^8.7.3",
    "shx": "^0.3.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
